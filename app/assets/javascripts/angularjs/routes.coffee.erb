@app.config(['$routeProvider', '$locationProvider', ($routeProvider, $locationProvider) ->

  $routeProvider
  .when '/',
    templateUrl: "<%= asset_path('receipts.html') %>",
    controller: ReceiptsController
  .when '/receipts',
    templateUrl: "<%= asset_path('receipts.html') %>",
    controller: ReceiptsController
  .when '/posts/new',
    templateUrl: "<%= asset_path('new_posts.html') %>",
    controller: NewPostsController
  .when '/organizations/:id',
    templateUrl: "<%= asset_path('organizations.html') %>",
    controller: OrganizationsController
  .when '/organizations',
    templateUrl: "<%= asset_path('organizations.html') %>",
    controller: OrganizationsController
  .when '/organizations/:id/members',
    templateUrl: "<%= asset_path('members.html') %>",
    controller: MembersController
  .when '/user/organizations',
    templateUrl: "<%= asset_path('organizations/show.html') %>",
    controller: OrganizationsShowController
  .when '/user/organizations/:id',
    templateUrl: "<%= asset_path('organizations/show.html') %>",
    controller: OrganizationsShowController
  .when '/settings/profile',
    templateUrl: "<%= asset_path('settings/baseSetting.html') %>",
    controller: baseInfoController
  .when '/settings/push',
    templateUrl: "<%= asset_path('settings/system_setting_push.html') %>",
    controller: SystemSettingPushController
  .when '/settings/logo',
    templateUrl: "<%= asset_path('settings/system_logo.html') %>",
    controller: SystemSettingsLogoController
  .when '/settings/position',
    templateUrl: "<%= asset_path('settings/system_position.html') %>",
    controller: SystemSettingsPositionController
  .when '/settings/password',
    templateUrl: "<%= asset_path('settings/password.html') %>",
    controller: changePasswordController
  .when '/user/profile',
    templateUrl: "<%= asset_path('profile.html') %>",
    controller: profileController

  # $locationProvider.html5Mode(true)
])