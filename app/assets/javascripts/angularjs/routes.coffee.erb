@app.config(['$stateProvider', '$urlRouterProvider', ($stateProvider, $urlRouterProvider)->
  $urlRouterProvider.otherwise("/")

  $stateProvider
    .state 'home',
      url: "/"
      views: 
        "mainView":
          templateUrl: "<%= asset_path('receipts.html') %>"
          controller: ReceiptsController
        "singleReceiptView":
          templateUrl: "<%= asset_path('youxin_profile.html') %>"
          controller: YouxinProfileController

    .state 'admin',
      url: '/admin'
      views:
        'mainView':
          templateUrl: "<%= asset_path('admin/admin.html') %>"
          controller: AdminController
        "singleReceiptView":
          templateUrl: "<%= asset_path('youxin_profile.html') %>"
          controller: YouxinProfileController

    .state 'admin.organizations',
      url: "/organizations"
      views:
        "adapter":
          templateUrl: "<%= asset_path('admin/organizations/organization.html') %>"
          controller: AdminOrganizationsController
    .state 'admin.organizations.profile',
      url: "/:id"
      views:
        'detail':
          templateUrl: "<%= asset_path('admin/organizations/profile.html') %>"
          controller: AdminOrganizationsProfileController
    .state 'organizations',
      url: "/organizations"
      views:
        "mainView":
          templateUrl: "<%= asset_path('organizations/template.html') %>"
          controller: OrganizationsController
        "singleReceiptView":
          templateUrl: "<%= asset_path('youxin_profile.html') %>"
          controller: YouxinProfileController

    .state 'organizations.profile',
      url: "/:id"
      views:
        "detail":
          templateUrl: "<%= asset_path('organizations/profile.html') %>"
          controller: OrganizationsProfileController

    .state 'member_manager',
      url: "/organizations/:id/members"
      views:
        "mainView":
          templateUrl: "<%= asset_path('organizations/members.html') %>"
          controller: OrganizationMembersController
        "singleReceiptView":
          templateUrl: "<%= asset_path('youxin_profile.html') %>"
          controller: YouxinProfileController

    .state 'post_new',
      url: "/posts/new"
      views:
        "mainView":
          templateUrl: "<%= asset_path('new_posts.html') %>"
          controller: NewPostsController
        "singleReceiptView":
          templateUrl: "<%= asset_path('youxin_profile.html') %>"
          controller: YouxinProfileController

    .state 'self_page',
      url: "/account/profile"
      views:
        "mainView":
          templateUrl: "<%= asset_path('profile.html') %>"
          controller: profileController
        "singleReceiptView":
          templateUrl: "<%= asset_path('youxin_profile.html') %>"
          controller: YouxinProfileController

    .state 'settings',
      url: '/settings'
      views:
        'mainView':
          templateUrl: "<%= asset_path('settings/template.html') %>"
          controller: SettingsController
        "singleReceiptView":
          templateUrl: "<%= asset_path('youxin_profile.html') %>"
          controller: YouxinProfileController

    .state 'settings.account',
      url: "/account"
      views:
        "adapter":
          templateUrl: "<%= asset_path('settings/adapter.html') %>"
          controller: AccountController
    .state 'settings.account.password',
      url: "/password"
      views:
        "detail":
          templateUrl: "<%= asset_path('settings/account/change_password.html') %>"
          controller: ChangePasswordController
    .state 'settings.account.profile',
      url: "/profile"
      views:
        "detail":
          templateUrl: "<%= asset_path('settings/account/change_profile.html') %>"
          controller: ChangeProfileController
    .state 'settings.system',
      url: '/system'
      views:
        "adapter":
          templateUrl: "<%= asset_path('settings/adapter.html') %>"
          controller: SystemController
    .state 'settings.system.logo',
      url: '/logo'
      views:
        "detail":
          templateUrl: "<%= asset_path('settings/system/logo.html') %>"
          controller: SystemLogoController
    .state 'settings.system.position',
      url: '/position'
      views:
        "detail":
          templateUrl: "<%= asset_path('settings/system/position.html') %>"
          controller: SystemPositionController
    .state 'settings.system.push',
      url: '/push'
      views:
        "detail":
          templateUrl: "<%= asset_path('settings/system/push.html') %>"
          controller: SystemPushController

    .state 'notifications',
      abstract: true
      url: "/notifications"
      views:
        "mainView":
          templateUrl: "<%= asset_path('notifications/nav_template.html') %>"
          controller: NotificationsController
        "singleReceiptView":
          templateUrl: "<%= asset_path('youxin_profile.html') %>"
          controller: YouxinProfileController
    .state 'notifications.comments',
      url: "/comments"
      views:
        "detail":
          templateUrl: "<%= asset_path('notifications/comment.html') %>"
          controller: NotificationsCommentsController
    .state 'notifications.system',
      url: "/system"
      views:
        "detail":
          templateUrl: "<%= asset_path('notifications/system.html') %>"
          controller: NotificationsSystemProfileController

    .state 'bills',
      url: "/bills"
      abstract: true
      views:
        "mainView":
          templateUrl: "<%= asset_path('notifications/nav_template.html') %>"
          controller: BillsController
        "singleReceiptView":
          templateUrl: "<%= asset_path('youxin_profile.html') %>"
          controller: YouxinProfileController
    .state 'bills.sms',
      url: "/sms"
      views:
        "detail":
          templateUrl: "<%= asset_path('notifications/sms.html') %>"
          controller: BillsSmsController
    .state 'bills.phone',
      url: "/phone"
      views:
        "detail":
          templateUrl: "<%= asset_path('notifications/phone.html') %>"
          controller: BillsPhoneController
])