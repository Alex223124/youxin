.unread-posts.pull-left
  .post ng-repeat="receipt in receipts"
    .content
      .created_at.pull-right
        small.timeago.muted datetime="{{receipt.created_at}}"
      .avatar
        img.pull-left ng-src="{{receipt.author.avatar.small}}"
      .name
        a href="/users/{{receipt.author.name}}" {{receipt.author.name}}
      .organizations
        a href="#" class="organization" organization
      .details
        span.title {{receipt.post.title}}
        span.body {{receipt.post.body}}
      .tools
        a.btn.btn-link
          i.icon-expand-alt
          | 展开
        a.attachments-btn.btn.btn-link data-toggle="collapse" data-target="{{receipt.id}}-attachments" data-parent="{{receipt.id}}-additions" ng-show="receipt.post.attachmentted"
          i.icon-file-alt
          | 附件
        a.forms-btn.btn.btn-link data-toggle="collapse" data-target="{{receipt.id}}-forms" data-parent="{{receipt.id}}-additions" ng-show="receipt.post.formed"
          i.icon-table
          | 表格
        a.recipients-btn.btn.btn-link data-toggle="collapse" data-target="{{receipt.id}}-recipients" data-parent="{{receipt.id}}-additions" ng-show="receipt.origin"
          i.icon-eye-open
          | 未读名单
        a.comments-btn.btn.btn-link.pull-right data-toggle="collapse" data-target="{{receipt.id}}-comments" data-parent="{{receipt.id}}-additions"
          i.icon-comments
          | 评论
        a.favorite-btn.btn.btn-link.pull-right href='#'
          i.icon-heart
          | 收藏
    .additions id="{{receipt.id}}-additions"
      .accordion-group.attachments-box
        .collapse.in id="{{receipt.id}}-attachments"
          .attachments
            .attachment
              a.image.pull-left.popuper href="javascript:;" data-origin-dimension="903,523" data-origin-src="/attachments/51d63ef873457649bf000001" data-origin-name="screenshot.png" title='点击预览'
