.unread-posts.pull-left
  .post ng-repeat="unread_receipt in unread_receipts.data"
    .content
      .created_at.pull-right
        small.timeago.muted datetime="{{unread_receipt.created_at}}"
      .avatar
        img.pull-left ng-src="{{unread_receipt.author.avatar}}"
      .name
        a href="/users/{{unread_receipt.author.name}}" {{unread_receipt.author.avatar}}
      .organizations
        a href="#" class="organization" organization
      .details
        span.title receipt.post.title
        span.body receipt.post.body
      .tools
        a.comments-btn.btn.btn-link.pull-right data-toggle="collapse" data-target="{{unread_receipt._id}}-comments" data-parent="{{unread_receipt._id}}-additions"
          i.icon-comments
          | 评论
        a.favorite-btn.btn.btn-link.pull-right href='#'
          i.icon-heart
          | 收藏

        a.attachments-btn.btn.btn-link data-toggle="collapse" data-target="{{unread_receipt._id}}-attachments" data-parent="{{unread_receipt._id}}-additions"
          i.icon-file-alt
          | 附件
        a.forms-btn.btn.btn-link data-toggle="collapse" data-target="{{unread_receipt._id}}-forms" data-parent="{{unread_receipt._id}}-additions"
          i.icon-table
          | 表格
        a.recipients-btn.btn.btn-link data-toggle="collapse" data-target="{{unread_receipt._id}}-recipients" data-parent="{{unread_receipt._id}}-additions"
          i.icon-eye-open
          | 未读名单
    .additions id="{{unread_receipt._id}}-additions"
      .accordion-group.attachments-box
        .collapse.in id="{{unread_receipt._id}}-attachments"
          .attachments
            .attachment
              a.image.pull-left.popuper href="javascript:;" data-origin-dimension="903,523" data-origin-src="/attachments/fe304d799cceea0075c5b8c5a1251359" data-origin-name="screenshot.png" title='点击预览'
